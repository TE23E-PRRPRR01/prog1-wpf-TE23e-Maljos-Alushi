<Window x:Class="EventApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#EEE"
        SizeToContent="WidthAndHeight"
        MinHeight="200" MinWidth="200">
    <Grid>
<StackPanel Margin="10" >
        <Label FontSize="18" FontWeight="Bold">Ange en text</Label>
        <TextBox Name="tbxText" Margin="5" Padding="5" Height="50" TextWrapping="Wrap"></TextBox>
        <Button Click="KlickOk" Margin="5" Padding="5" Background="LimeGreen" Foreground="white" >Ok</Button>
        <Button Click="KlickAvbryt" Margin="5" Padding="5" Background="Red" Foreground="white">Avbryt</Button>
    </StackPanel>
    </Grid>
</Window>
