<Window x:Class="BranbollApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BranbollApp"
        mc:Ignorable="d"
        Title="BrännbollsApp" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel>
    <Label FontSize="30">Brännbollsräknaren</Label>

    <StackPanel Orientation="Horizontal">
    <Label>Lag inne:</Label>
    <TextBox Name="txbInne" FontWeight="Bold" Width="50"></TextBox>
    <Label>Lag ute:</Label>
    <TextBox Name="txbUte" FontWeight="Bold" Width="50"></TextBox>
    </StackPanel>

    <StackPanel Orientation="Horizontal">
    <Button Click="ClickFrivarv" Height="40" Width="70" Margin="10" Padding="10">Frivarv</Button>
    <Button Click="ClickBränning" Height="40" Width="70" Margin="10" Padding="10">Bränning</Button>
    <Button Click="ClickLyra" Height="40" Width="70" Margin="10" Padding="10">Lyra</Button>
    <Button Click="ClickVarv" Height="40" Width="70" Margin="10" Padding="10">Varv</Button>
    </StackPanel>
    <Label FontWeight="Bold">Historik</Label>
    <TextBox Name="txbHistorik" IsReadOnly="True" Margin="50" Padding="50"></TextBox>
    </StackPanel>
</Window>
