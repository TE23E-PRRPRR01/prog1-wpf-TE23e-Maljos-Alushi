<Window x:Class="gissaapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gissaapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        SizeToContent="WidthAndHeight" Background="#EEE">
    <StackPanel>
      <Label FontWeight="Bold" FontSize="18">Gissa Talet (1..1000)</Label>
    
    <Label Margin="5">Ange Gissning:</Label>
    <TextBox Name="txbGissning" Margin="5" Height="30"></TextBox>

    <StackPanel Orientation="Horizontal">
    <Button Click="KlickGissa" Margin="5" Width="150">Gissa</Button>
    <Button Click="KlickFacit" Margin="5" Width="150">Visa Facit</Button>
    </StackPanel>

    <Label Margin="5">Resultat:</Label>
    <TextBox Name="txbResultat" Margin="5" Height="30"></TextBox>
    
    <Label Margin="5">Gissningshistorik</Label>
    <Button Click="KlickHistorik" Margin="5">Visa Gissningar</Button>
    <TextBox Name="txbGissningar" Margin="5" Height="100"></TextBox>

    <Button Click="SpelaIgen">Spela Igen</Button>
    </StackPanel>
</Window>
