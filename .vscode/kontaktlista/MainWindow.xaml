<Window x:Class="kontaktlista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kontaktlista"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight"
        Background="#EEE">
        <StackPanel Margin="10">
            <Label Margin="5" FontSize="30">Kontaktboken</Label>
            <StackPanel Margin="5" Orientation="Horizontal">
            <Label Margin="5" Width="120">Ange titel (Herr/Fru): </Label>
            <TextBox Margin="5" Name="txbTitel" Width="250"/>
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
            <Label Margin="5" Width="120">Ange förnamn: </Label>
            <TextBox Margin="5" Name="txbFornamn" Width="250"/>
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
            <Label Margin="5" Width="120">Ange efternamn: </Label>
            <TextBox Margin="5" Name="txbEfternamn" Width="250"/>
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
            <Label Margin="5" Width="120">Ange ålder: </Label>
            <TextBox Margin="5" Name="txbÅlder" Width="250"/>
            </StackPanel>
            <Button Margin="5" Padding="5" Click="KlickVisa">Visa</Button>
            <StackPanel Margin="5" Orientation="Horizontal">
            <Label Margin="5" Width="120">Resultat: </Label>
            <TextBox Margin="5" Name="txbResultat" Width="250"
            IsReadOnly="True" />
            </StackPanel>
            <Button Margin="5" Padding="5" Click="klickRensa">Rensa</Button>

        </StackPanel>



</Window>
