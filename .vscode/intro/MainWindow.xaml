<Window x:Class="intro.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:intro"
    mc:Ignorable="d"
    Title="Min Första Fönster Program " Height="450" Width="800"
    MinHeight="200" MinWidth="200"
    MaxHeight="500" MaxWidth="600"
    SizeToContent="WidthAndHeigt"
    Background="#ABC">
    <StackPanel Margin="10">
        <Label FontSize="27" FontWeight="Bold" Margin="5">Hej Världen</Label>
        <StackPanel Orientation="Horizontal">
            <Label Margin="5">Ange Namn:</Label>
        <TextBox Margin="5" Width="80"></TextBox>
        </StackPanel>
<Button Background="Black" Foreground="white" FontWeight="Bold" FontSize="20" Padding="10">Klicka Mig!</Button>
    </StackPanel>
</Window>