<Window x:Class="MelloApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelloApp"
        mc:Ignorable="d"
        Title="MelloYellow" Height="450" Width="800" 
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="20" Background="#FFF">
        <Image Source="bilder/mello.png" Width="200" Margin="0,0,0,10"></Image>
        <Label Margin="10" FontSize="14">Vilken är din favoritlåt?</Label>

        <Button Name="röd" Click="KlickRösta" FontWeight="Bold" Margin="10" Padding="10" Background="Red">Röd</Button>
        <Button Name="blå" Click="KlickRösta" FontWeight="Bold" Margin="10" Padding="10" Background="Blue">Blå</Button>
        <Button Name="grön" Click="KlickRösta" FontWeight="Bold" Margin="10" Padding="10" Background="Green">Grön</Button>
        <Button Name="gul" Click="KlickRösta" FontWeight="Bold" Margin="10" Padding="10" Background="Yellow">Gul</Button>
        <Button Name="lila" Click="KlickRösta" FontWeight="Bold" Margin="10" Padding="10" Background="Purple">Lila</Button>
        <Button Name="Borta" Click="Rensa" FontWeight="Bold" Margin="10" Padding="10" >Rensa</Button>

        <Label Margin="10" Foreground="#FFF">Antal röster:</Label>
        <TextBox Name="txbResultat" IsReadOnly="True" Margin="10" Padding="10"></TextBox>
        
    </StackPanel>
</Window>
